    a.side-nav__item(href=`/reports/childrenByGrade/${selectedYear}` target="_blank" rel="noopener noreferrer") Children by Grade
    a.side-nav__item(href=`/reports/classLists/${selectedYear}` target="_blank" rel="noopener noreferrer") Class Listings
    a.side-nav__item(href=`/class_grid/${selectedYear}`) Class Grid 
