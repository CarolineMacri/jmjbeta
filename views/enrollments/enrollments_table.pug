block content   
    .page__content
        div
            section
                h1.enrollments__title  Enrollments
                include ../_yearSelector
                -var options = {weekday: 'long', year:'numeric', month:'long', day:'numeric'}
                
                h2.enrollments__title OPEN  
                h2.enrollments__title= currentYearDoc.enrollmentOpenDate.toISOString().slice(0,10) + ' to ' +  currentYearDoc.enrollmentCloseDate.toISOString().slice(0,10)  
        
           
            table.enrollments
                tr
                    th LastName
                    th FirstName
                    th Enrollment Status
                   
                for family in enrollments    
