mixin table(singularName, array, headers, keys, newUrl) 
 
    //- singularName = 'child'
    //- array = [child1, child2, child3]
    //- headers = ['First Name', 'Sex', 'Grade']
    //- keys = ['firstName', 'sex', 'grade']

    data
    table(class=pluralize(singularName)) 
        tr
            for h in headers
                th= h
     
            for e in array
                tr(id= e.id)
                    for key in keys
                        td= e[key]
            
                    td.button
                        a.edit(href=`/${singularName}_profile/${e.id}`) &#9998
                    td.button
                        .delete &#10006

        tr#new
            td.button 
                .new 
                    a(href=newUrl) &#10010