extends baseReport

block content   
  main
    .container
      section.page__content-row
        include ../_yearSelector

      section.report-children
        .report__title
          h1 Children By Grade Level
          
        each list, grade in gradeLists
        
          .report-children__box
            .report-children__grade 
              h2=`${grade} - ${list.length}`

            each child in list
              .report-children__record
                .report-children__record__student
                  p=child
              
          
        