extends baseReport

block content   
  main
    .container
      section.page__content-row
        include ../_yearSelector

      section.report-invoices 
      .report__title
        h1.invoices-title Children By Grade Level
        
      each list, grade in gradeLists
      
        .report-invoices-box
          .report-invoices-family 
            h2=`${grade} - ${list.length}`

          each child in list
            .report-invoices-record
              .report-invoices-record-student
                p=child
            
          
        