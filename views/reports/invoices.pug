extends baseReport

block content   
  main
    .container
      section.page__content-row
        include ../_yearSelector
      section.report-invoices
    
      .report__title
        h1 +JMJ+ Homeschool Co-op Invoices

     
      for family in families
        .report-class-lists-hour
          .report-class-lists-box
              h1= family._id
              .report-class-lists-course
                .report-class-lists-course-name
                  for teacher in family.teachers
                    h2= teacher.name
                    .report-class-lists-enrollments
                      for cl in teacher.classes
                        h3= "---- " + cl.class + " " + cl.student + " $" + cl.price + " + $" + cl.materials + " " 
                    h4= "Total $" + teacher.total
            
      
      